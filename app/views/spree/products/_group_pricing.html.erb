<% display_percent ||= false %>
<% if product.price > 0 and product.master.group_prices.present? %>
<div id="bulk-discount">
  <h6><%= t(:bulk_discount) %></h6>
  <table>
  <% product.master.group_prices.each do |v| %>
    <%= content_tag(:tr) do %>
      <%= content_tag :td, (v.open_ended? ? v.range : "#{v.range.to_range.begin}â€“#{v.range.to_range.end}") %>
      <%= content_tag :td, number_to_currency(v.amount)%>
      <%= content_tag(:td, "%i%" % ((1.0 - v.amount / product.master.price) * 100.0).round) if display_percent %>
    <% end %>
  <% end %>
  </table>
</div>
<%end%>
